{
    "name": "@aspecto/cli",
    "version": "0.0.1",
    "description": "Aspecto CLI",
    "main": "./dist/index.js",
    "scripts": {
        "prestart": "tsc",
        "tsc": "tsc",
        "watch": "tsc -w",
        "start": "node ./dist",
        "prettier": "prettier --config .prettierrc --write \"src/**/*.{ts,js,json}\""
    },
    "repository": {
        "type": "git",
        "url": "git+ssh://git@gitlab.com/aspecto/cli.git"
    },
    "author": "Aspecto LTD",
    "license": "ISC",
    "bugs": {
        "url": "https://gitlab.com/aspecto/cli/issues"
    },
    "homepage": "https://gitlab.com/aspecto/cli#readme",
    "dependencies": {
        "colors": "^1.4.0",
        "commander": "^4.0.1",
        "figlet": "^1.2.4",
        "install": "^0.13.0",
        "request": "^2.88.0",
        "request-promise-native": "^1.0.8",
        "uuid": "^3.3.3"
    },
    "devDependencies": {
        "@types/commander": "^2.12.2",
        "@types/figlet": "^1.2.0",
        "@types/node": "^12.12.14",
        "@types/request-promise-native": "^1.0.17",
        "@types/uuid": "^3.4.6",
        "husky": "^3.1.0",
        "lint-staged": "^9.5.0",
        "prettier": "^1.19.1",
        "ts-node": "^8.5.3",
        "typescript": "^3.7.2"
    },
    "bin": {
        "aspecto": "./dist/index.js"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{ts,tsx,js,jsx,json}": [
            "prettier --write",
            "git add"
        ]
    }
}
