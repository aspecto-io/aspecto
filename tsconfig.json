{
    "compilerOptions": {
        "target": "es5",
        "lib": ["es2015"],
        "rootDir": "src",
        "outDir": "dist",
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": false,
        "declaration": true,
        "sourceMap": true,
        "inlineSources": true,
        "types": ["node"],
        "noImplicitAny": true,
        "allowSyntheticDefaultImports": true
        // "noUnusedLocals": true,
        // "noUnusedParameters": true
    },
    "include": ["src/**/*"],
    "exclude": ["**/node_modules/*"]
}
